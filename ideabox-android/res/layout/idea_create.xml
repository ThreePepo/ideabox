<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:layout_weight="1.0"
              android:id="@+id/LinearLayout01"
              android:background="#ffffff">
    <TableLayout android:id="@+id/TableLayout333"
                 android:layout_width="fill_parent" android:layout_height="wrap_content"
                 android:layout_marginLeft="20.0px" android:layout_marginRight="20.0px">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:id="@+id/button_save"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/share"
                android:id="@+id/button_share"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="209dp"
                android:text="tags..."
                android:id="@+id/text_idea" android:layout_gravity="center"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="insert pic"
                android:id="@+id/button_pic"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_pic"/>
    </TableLayout>

</LinearLayout>

