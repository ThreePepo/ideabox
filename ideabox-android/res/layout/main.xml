<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <TextView android:id="@+id/textView1"
              android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="IdeaBox功能集"
            android:textColor="#ff3c5b"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加点子"
            android:id="@+id/button1" android:layout_gravity="center_vertical|left|right"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上传点子描述图"
            android:id="@+id/button2" android:layout_gravity="left|center_vertical"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上传点子描述声音版"
            android:id="@+id/button3" android:layout_gravity="left|center_vertical"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看他人的点子"
            android:id="@+id/button4" android:layout_gravity="left|center_vertical"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的成就之路"
            android:id="@+id/button5" android:layout_gravity="left|center_vertical"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="消息通知"
            android:id="@+id/notifyMsg" android:layout_gravity="center" android:textColor="#190aff"
            android:singleLine="true"/>
</LinearLayout>

